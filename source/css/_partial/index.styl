.post {
    margin: 1em auto;
    padding: 30px 50px;
    background-color: #fff;
    border: 1px solid #ddd;
    box-shadow: 0 0 2px #ddd;

    .post-content {
        text-shadow: 0 0 1px #828282;
        word-wrap: break-word;
        font-family: 'Noto Serif SC', serif;
        font-weight: 100;
        font-size: 1em;

        p {
            line-height: 2;
        }
    }
}

.posts {
    .post:first-child {
        margin-top: 0;
    }

    .post-title {
        font-size: 1.5em;

        .post-title-link {
            color: #368CCB;
            text-decoration: none;
        }
    }

    .post-content {
        a {
            color: #368CCB;
            text-decoration: none;
        }
    }

    .post-meta {
        color: #BABABA;
    }
}

